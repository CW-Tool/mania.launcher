<UserControl x:Class="Mania.Launcher.Animation.ButtonLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mimicPanel="clr-namespace:Mania.Launcher.Animation"
             xmlns:uiElements1="clr-namespace:Mania.Launcher.Animation.UiElements;assembly=Mania.Utils"
             d:DesignHeight="20"
             d:DesignWidth="20"
             mc:Ignorable="d">

    <Grid>
        <uiElements1:AnimatedArea x:Name="_animatedAreaMini"
                               Frames="{Binding Mode=OneWay,
                                                Path=Frames,
                                                RelativeSource={RelativeSource FindAncestor,
                                                                               AncestorType={x:Type mimicPanel:ButtonLoader}}}" />

    </Grid>
</UserControl>
